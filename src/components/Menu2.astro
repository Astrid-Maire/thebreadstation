---
import "../styles/global.css";
---
<header>
    <nav>
        <div class="burger-menu">
            <div class="container_header nav-container">
                <input class="checkbox" type="checkbox" />
                <div class="hamburger-lines">
                    <span class="line line1"></span>
                    <span class="line line2"></span>
                    <span class="line line3"></span>
                </div>
                <div class="menu" id="menu">
                    <li> <a href="/udvalg">Vores udvalg</a></li>
                    <li> <a href="/omtema">Om os</a></li>
                    <li> <a href="/kontakt">Kontakt os</a></li>
                </div>
            </div>
        </div>
    </nav>
</header>
  
  
  <style>
/*header*/
@media (max-width: 800px) {
  .container_header {
    max-width: 1000px;
    width: 100%;
    margin: auto;
  }

  .burger-menu {
    width: 100%;
    box-shadow: 0 1px 4px var(--f-color);
  }

  .nav-container {
    display: flex;
    align-items: center;
    height: 62px;
    line-height: 42px;
  }

  .burger-menu .nav-container li {
    list-style: none;
  }

  .burger-menu .nav-container a {
    text-decoration: none;
    color: var(--f-color);
    font-weight: 500;
    font-size: 1.2rem;
    padding: 0.7rem;
  }

  .burger-menu .nav-container a:hover {
    font-weight: bolder;
  }

  .nav-container {
    display: block;
    position: relative;
    height: 60px;
  }

  .nav-container .checkbox {
    position: absolute;
    display: block;
    height: 32px;
    width: 32px;
    top: 20px;
    right: 20px;
    z-index: 5;
    opacity: 0;
    cursor: pointer;
  }

  /*bruger icon*/
  .nav-container .hamburger-lines {
    display: block;
    height: 26px;
    width: 32px;
    position: absolute;
    top: 15px;
    right: 20px;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .nav-container .hamburger-lines .line {
    display: block;
    height: 4px;
    width: 100%;
    border-radius: 10px;
    background: var(--f-color);
  }

  .nav-container .hamburger-lines .line1 {
    transform-origin: 0% 0%;
    transition: transform 0.4s ease-in-out;
  }

  .nav-container .hamburger-lines .line2 {
    transition: transform 0.2s ease-in-out;
  }

  .nav-container .hamburger-lines .line3 {
    transform-origin: 0% 100%;
    transition: transform 0.4s ease-in-out;
  }

  .burger-menu .menu {
    padding-top: 120px;
    background-color: var(--a-color);
    height: 1800%;
    width: 100%;
    transform: translate(-150%);
    display: flex;
    flex-direction: column;
   
    padding-left: 50px;
    text-align: center;
  }

  .nav-container input[type="checkbox"]:checked ~ .menu {
    transform: translateX(0);
  }

  .nav-container input[type="checkbox"]:checked ~ .hamburger-lines .line1 {
    transform: rotate(45deg);
  }

  .nav-container input[type="checkbox"]:checked ~ .hamburger-lines .line2 {
    transform: scaleY(0);
  }

  .nav-container input[type="checkbox"]:checked ~ .hamburger-lines .line3 {
    transform: rotate(-45deg);
  }
}

@media (min-width: 800px) {
  .checkbox {
    display: none;
  }

  .menu li {
    list-style: none;
    margin: 0;
  }

  .menu a {
    text-decoration: none;
    color: var(--f-color);
    font-size: 18px;
    display: block;
    padding: 20px;
  }

  .menu a:hover {
    font-weight: bolder;
  }

  .menu ul {
    padding: 0;
    list-style: none;
  }

  nav a {
    color: var(--header-size);
    font-weight: bold;
    text-decoration: none;
  }

  .menu {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 20px;
    margin: auto;
  }

  header .menu a {
    text-decoration: none;
    color: var(--f-color);
    font-size: var(--header-size);
    align-items: center;
    justify-content: flex-end;
  }
}

.menu.active {
  display: block;
}

 </style>
  
 <script>
    document.addEventListener("DOMContentLoaded", function () {
  const burgerIcon = document.getElementById("burger-icon");
  const menu = document.getElementById("menu");

  burgerIcon.addEventListener("click", function () {
    menu.classList.toggle("active");
  });
});
  </script>
