---
const article = [
{
    imageUrl: "/img/kort.jpg"
 },
]
---
<div class="container">
    <section>
        <p class="subheading">
        Unge kvinder mellem 16-24 år står over for en voksende udfordring med eget velvære og selvopfattelse.
    </p>
    </section>        
    <section>
        {article.map(article => {
            return <article>
                    <div class="sticky_container">
                        <div class="sticky">
                        </div>
                    </div>
        </article>
        })}    
    </section>
</div>

<style>
.sticky {
    --size: 200px;
    width: var(--size);
    height: var(--size);
    background-size: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    transform: translateY(275px);
    opacity: 0;
    filter: blur(5px);
    transition: all .3s ease-out;
}

.sticky img.sticky_image {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
}

.sticky.pop {
    opacity: 1;
    filter: blur(0);
    transform: rotate(15deg) translateY(0);
}

article:nth-child(2) .sticky.pop {
    transform: rotate(-15deg) translateY(0);
}
</style>

<script>
    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add("pop");
            }
        });
    });
    
    const stickyNotes = document.querySelectorAll(".sticky");
    
    stickyNotes.forEach(element => {
        observer.observe(element);
    });
</script>